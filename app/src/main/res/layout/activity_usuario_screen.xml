<!-- Interface for Shower Usage Details -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="60dp"
        android:background="#AAFFFFFF"
        android:orientation="horizontal">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile"
            android:background="@color/black" />

        <!-- Admin Text -->
        <TextView
            android:id="@+id/admin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp" />
    </LinearLayout>


    <!-- Shower Usage Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <!-- Shower 3 -->
        <LinearLayout
            android:id="@+id/shower_3_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#AAFFFFFF"
            android:orientation="vertical"
            android:padding="26dp">

            <ImageView
                android:id="@+id/shower_3_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_shower" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shower_3_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regadera 3"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/shower_3_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIN USO"
                android:textColor="#C32E1C"
                android:textSize="14sp" />

            <!-- Dentro del LinearLayout de Shower 3, reemplaza el Button existente con: -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/encenderButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encender"/>
            </LinearLayout>



            <!-- Agrega estos TextViews dentro del LinearLayout de cada regadera -->
            <TextView
                android:id="@+id/shower_time_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Tiempo: 10 minutos"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/alert_time_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Alerta: 1 minuto antes"
                android:textSize="14sp"
                android:textColor="#000000"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#AAFFFFFF"
        android:padding="8dp"
        android:layout_marginTop="113dp">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home"
            android:layout_weight="1"
            android:gravity="center" />



        <ImageView
            android:id="@+id/nav_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_settings"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>


</LinearLayout>
